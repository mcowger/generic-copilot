{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2024",
		"lib": [
			"ES2024",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"outDir": "out",
		"skipLibCheck": true,
		"types": [
			"node",
			"mocha"
		],
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"webview-ui",
		"src/test" // ⬅️ Add this here
	]
}