{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"label": "watch:extension",
			"script": "watch:extension",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"group": "watchers"
			}
		},
		{
			"type": "npm",
			"label": "watch:webview",
			"script": "watch:webview",
			"isBackground": true,
			"problemMatcher": {
				"owner": "esbuild",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": {
					"regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(error|warning|note):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"background": {
					"beginsPattern": "^.",
					"endsPattern": "\\[watch\\] build finished, watching for changes"
				}
			},
			"presentation": {
				"reveal": "always",
				"group": "watchers"
			}
		},
		{
			"label": "tasks:watchall",
			"dependsOn": [
				"watch:extension",
				"watch:webview"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Prepare Env",
			"type": "shell",
			"command": "bash",
			"args": [
				"-c",
				"cd ${workspaceFolder} && npm install && cd webview-ui && npm install && cd ${workspaceFolder} && npm run download-api && echo NOTE: YOU MUST CREATE A NEW PROFILE CALLED ExtensionDebugging TO USE THE DEBUGGER"
			],
			"presentation": {
				"reveal": "always",
				"focus": true
			},
			"group": {
				"kind": "none"
			}
		}
	]
}